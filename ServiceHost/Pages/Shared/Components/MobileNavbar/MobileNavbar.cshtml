@using Microsoft.AspNetCore.Mvc.Localization
@using My_ShopQuery.Contract.GeneralSetting
@model My_ShopQuery.Contract.Menu.MenuQueryModel
@inject IViewLocalizer Localizer

<div class="mobile-nav__wrapper ">
    <div class="mobile-nav__overlay mobile-nav__toggler "></div>
    <div class="mobile-nav__content ">
        <span class="mobile-nav__close mobile-nav__toggler ">
            <i class="fa fa-times "></i>
        </span>
        <div class="logo-box ">
            <a href="\" aria-label="logo image">
                <img src="~/Images/@Model.SiteLogoQueryModel.Picture" width="143 " alt="@Model.SiteLogoQueryModel.PictureAlt" title="@Model.SiteLogoQueryModel.PictureTitle">
            </a>
        </div>
        <div class="mobile-nav__container">
        </div>
        <ul class="mobile-nav__contact list-unstyled ">
            <li>
                <i class="fa fa-envelope"></i>
                <a href="mailto:@Model.GeneralSettingQuery.Email">@Model.GeneralSettingQuery.Email</a>
            </li>
           
            @{
              
                    var phone = Model.GeneralSettingQuery.PhoneNumbers.Split("#");
                    foreach (var item in phone)
                    {
                        if (!string.IsNullOrWhiteSpace(item))
                        {
                            <li>
                                <i class="fa fa-phone"></i>
                                <a href="tel:@item">@item</a>
                            </li>
                        }
            }

                }
                
         
        </ul>
        <div class="mobile-nav__top">
            <div class="mobile-nav__social ">
                @foreach (var item  in Model.SocialMediaQueries)
                {
                    <a href="@item.Link" class="fab fa-@item.Title"></a>
                }
            </div>
        </div>
    </div>
</div>