@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@model List<My_ShopQuery.Contract.ProductCategory.ProductCategoryQueryModel>
@inject IViewLocalizer Localizer
<section class="cultivation-area pt-100 pb-70">
    <div class="container">
        <div class="cultivation-title">
            <span>Cultivation</span>
            <h3>Categories of cultivation</h3>
        </div>

        <div class="row d-flex justify-content-center pb-3">
            
        @foreach (var item  in  Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-6 mx-3">
                <div class="cultivation-item">
                    <div class="cultivation-image">
                        <img src="assets/img/cultivation-white.png" alt="image">
                        <a href="#" class="details-btn">
                            <i class="flaticon-plus"></i>
                        </a>
                    </div>
                    <div class="cultivation-content">
                        <div class="icon">
                            <i class="flaticon-fish-1"></i>
                        </div>
                        <span>@item.Products.Count Species</span>
                        <h3>@item.Name</h3>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>

    <div class="default-shape">
        <div class="default-shape-one">
            <img src="assets/img/default-shape/shape.png" alt="image">
        </div>

        <div class="default-shape-two">
            <img src="assets/img/default-shape/shape-2.png" alt="image">
        </div>
    </div>
</section>