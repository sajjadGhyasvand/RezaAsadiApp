@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using My_ShopQuery.Contract.Product
@model List<My_ShopQuery.Contract.ProductCategory.ProductCategoryQueryModel> 
@inject IViewLocalizer Localizer


<section class="shop-section section-top pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <span>VISIT OUR</span>
            <h3>product</h3>
        </div>

        <div class="tab shop-list-tab">
            <ul class="tabs tabs-two">
                @foreach (var item in  Model)
                {
                    <li>
                        <a href="#">
                            <span>@item.Name</span>
                        </a>
                    </li>
                }
            </ul>

            <div class="tab_content">
                @foreach (var category in Model)
                {
                    <div class="tabs_item">
                        @foreach (var item in  category.Products)
                        {
                            <div class="row align-items-center">
                                <div class="col-lg-3 col-md-6 col-sm-6">
                                    <div class="shop-item">
                                        <div class="shop-image">
                                            <img src="~/Images/@item.Picture" alt="@item.PictureAlt" title="@item.PictureTitle">
                                        </div>
                                        <div class="shop-content">
                                            <h3>@item.Name</h3>
                                            <div class="shop-btn">
                                                <a href="cart.html" class="shop-btn-one">
                                                    See More
                                                    <i class="flaticon-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="product-btn">
                            <a href="/AllProductList" class="product-btn-one">
                                All Products
                                <i class="flaticon-plus"></i>
                            </a>
                        </div>
                    </div>
                }
                
            </div>

           
        </div>
    </div>
</section>