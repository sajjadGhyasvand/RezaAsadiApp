@page
@model EditModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "ویرایش سوال متداول";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewData["title"]</h3>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-danger">@Model.Message</div>
            }
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.LanguageId" class="control-label">زبان</label>
                                <select asp-for="Command.LanguageId" class="select2" asp-items='Model.ListLanguage'>
                                    <option value="0">زبان را انتخاب کنید </option>
                                </select>
                                <span asp-validation-for="Command.LanguageId" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Question" class="control-label">سوال</label>
                                <textarea type="text" class="form-control" asp-for="Command.Question"></textarea>
                                <span asp-validation-for="Command.Question" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.Answer" class="control-label">پاسخ</label>
                                <textarea style="height: 200px;" type="text" class="form-control" asp-for="Command.Answer"></textarea>
                                <span asp-validation-for="Command.Answer" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.Command.Id" asp-for="Command.Id"/>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <a asp-page="./Index" class="btn btn-danger btn-block btn-rounded waves-effect m-b-5">بازگشت</a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-block btn-rounded waves-effect m-b-5">ویرایش</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Css
{
    <link href="~/AdminTheme/assets/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminTheme/assets/FileUploader/FileUpload.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminTheme/assets/select2/select2.min.js" type="text/javascript"></script>
    <script src="~/AdminTheme/assets/FileUploader/FileUpload.js" type="text/javascript"></script>
    <script type="text/javascript">
         $(document).ready(function () {
            $('.persianDateInput').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
             $('#datatable').dataTable();
                   CKEDITOR.replace('Command_Description', {
            height: 500
        });
         });
        jQuery(".select2").select2({
            width: '100%'
        });
    </script>
}