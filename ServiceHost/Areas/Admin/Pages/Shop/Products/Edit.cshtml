@page
@model ServiceHost.Areas.Admin.Pages.Shop.Products.EditModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "ویرایش خدمات";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ویرایش خدمات : @Model.Command.Name</h3>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-danger">@Model.Message</div>
            }
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Name" class="control-label">عنوان</label>
                                    <input type="text" class="form-control" asp-for="Command.Name">
                                    <span asp-validation-for="Command.Name" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Slug" class="control-label">اسلاگ</label>
                                    <input type="text" class="form-control" asp-for="Command.Slug">
                                    <span asp-validation-for="Command.Slug" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.LanguageId">زبان</label>
                                    <select asp-for="Command.LanguageId" asp-items="Model.ListLanguage" class="select2">
                                        <option value="0">انتخاب زبان</option>
                                    </select>
                                    <span asp-validation-for="Command.CategoryId" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.CategoryId">گروه خدمات</label>
                                    <select asp-for="Command.CategoryId" asp-items="Model.ProductCategories" class="select2">
                                        <option value="0">انتخاب گروه خدمات</option>
                                    </select>
                                    <span asp-validation-for="Command.CategoryId" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.CommentActive">وضعیت کامنت ها</label>
                                    <input type="checkbox" class="form-control" asp-for="Command.CommentActive">
                                    <span asp-validation-for="Command.CommentActive" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <label class="control-label" asp-for="Command.Picture">انتخاب تصویر</label>
                                <input type="file" class="inputFile form-control" asp-for="Command.Picture" accept="image/*">
                                <span asp-validation-for="Command.Picture" class="error"></span>
                                
                                <label class="control-label" asp-for="Command.ManualFile">کاتالوگ محصول</label>
                                <input type="file" class="form-control" asp-for="Command.ManualFile" accept=".pdf">
                                <span asp-validation-for="Command.ManualFile" class="error"></span>
                            </div>
                            <div  class="col-md-8">
                                <div class="divPriw text-center">
                                    <img id="preview" src="~/Images/@Model.Command.PictureString" alt="پیش‌ نمایش تصویر">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PictureTitle" class="control-label">عنوان تصویر</label>
                                    <input type="text" class="form-control" asp-for="Command.PictureTitle">
                                    <span asp-validation-for="Command.PictureTitle" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PictureAlt" class="control-label">آلت تصویر</label>
                                    <input type="text" class="form-control" asp-for="Command.PictureAlt">
                                    <span asp-validation-for="Command.PictureAlt" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group no-margin">
                                    <label asp-for="Command.MetaDescription" class="control-label">توضیحات متا</label>
                                    <input type="text" class="form-control" asp-for="Command.MetaDescription">
                                    <span asp-validation-for="Command.MetaDescription" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Keywords" class="control-label">کلمات کلیدی</label>
                                    <input type="text" class="form-control" placeholder="لطفا کلمات کلیدی را با ( # ) از هم جدا کنید" asp-for="Command.Keywords">
                                    <span asp-validation-for="Command.Keywords" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group no-margin">
                                    <label asp-for="Command.ShortDescription" class="control-label">توضیحات کوتاه</label>
                                    <input type="text" class="form-control" asp-for="Command.ShortDescription" onchange="fillField('Command_ShortDescription', 'Command_Description')">
                                    <span asp-validation-for="Command.ShortDescription" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group no-margin">
                                    <label asp-for="Command.StarBolt" class="control-label">توضیحات بولت استار</label>
                                    <textarea class="form-control  BodyContent" asp-for="Command.StarBolt"
                                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                    <span asp-validation-for="Command.StarBolt" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group no-margin">
                                    <label asp-for="Command.Description" class="control-label">توضیحات</label>
                                    <textarea class="form-control  BodyContent" asp-for="Command.Description"
                                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                    <span asp-validation-for="Command.Description" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id"/>
                        <input type="hidden" asp-for="Command.ShopType" value="@Model.Command.ShopType"/>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <a asp-page="./Index" class="btn btn-danger btn-block btn-rounded waves-effect m-b-5">بازگشت</a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-block btn-rounded waves-effect m-b-5">ویرایش</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Css
{
    <link href="~/AdminTheme/assets/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminTheme/assets/FileUploader/FileUpload.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminTheme/assets/select2/select2.min.js" type="text/javascript"></script>
    <script src="~/AdminTheme/assets/FileUploader/FileUpload.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            CKEDITOR.replace('Command_Description', {
                height: 500
            });
            CKEDITOR.replace('Command_StarBolt', {
                height: 500
            });
        });
        jQuery(".select2").select2({
            width: '100%'
        });
    </script>
}