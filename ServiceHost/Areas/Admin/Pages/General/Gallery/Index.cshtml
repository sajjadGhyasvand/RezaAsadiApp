@page
@using My_Shop_Framework.Application
@model IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت گالری";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-rounded waves-effect m-b-5 btn-lg" asp-page="./Create">ایجاد گالری جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در گالری</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Title"></label>
                        <input asp-for="SearchModel.Title" class="form-control" placeholder=" عنوان">
                    </div>
                    <div class="form-group">
                        <select asp-for="SearchModel.LanguageId" asp-items="Model.ListLanguage" class="select2">
                            <option value="0">فیلتربراساس زبان</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success btn-rounded waves-effect m-b-5">جستجو</button>
                    <a class="btn btn-primary btn-rounded waves-effect m-b-5" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست گالری</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>عکس</th>
                                <th>عنوان</th>
                                <th>تاریخ ثبت</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.GalleryViewModel)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="~/Images/@item.Picture" style="width: 70px; height: 70px"/>
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.DateTime.ToFarsi()</td>
                                    <td>
                                        <a class="btn btn-warning btn-rounded btn-sm btn-block waves-effect m-b-5" asp-page="./Edit" asp-route-id="@item.Id">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Css
{
    <link href="~/AdminTheme/assets/select2/select2.css" rel="stylesheet" type="text/css"/>
    <link href="~/AdminTheme/assets/FileUploader/FileUpload.css" rel="stylesheet" type="text/css"/>
}

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminTheme/assets/select2/select2.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
        jQuery(".select2").select2({
            width: '300px'
        });

    </script>
}