@page
@model ServiceHost.Areas.Admin.Pages.General.Certificate.EditModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "ویرایش گواهینامه";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ویرایش گواهینامه </h3>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-danger">@Model.Message</div>
            }
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Title" class="control-label">عنوان</label>
                                <input type="text" class="form-control" asp-for="Command.Title">
                                <span asp-validation-for="Command.Title" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.LanguageId" class="control-label">زبان</label>
                                <select class="form-control" asp-for="Command.LanguageId" asp-items="Model.ListLanguage">
                                    <option value="0">زبان را انتخاب کنید </option>
                                </select>
                                <span asp-validation-for="Command.LanguageId" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="Command.Image" class="control-label">تصویر گواهینامه</label>
                            <input type="file" class="form-control inputFile" asp-for="Command.Image" accept="image/*">
                            <span asp-validation-for="Command.Image" class="error"></span>

                            <label class="control-label" asp-for="Command.PdfFile">فایل pdf گواهینامه</label>
                            <input type="file" class="form-control" asp-for="Command.PdfFile" accept=".pdf">
                            <span asp-validation-for="Command.PdfFile" class="error"></span>
                        </div>
                        <div class="col-md-8">
                            <div class="divPriw text-center">
                                <img id="preview" src="~/Images/@Model.Command.ImageString" alt="پیش‌ نمایش تصویر">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="Command.Icon" class="control-label">تصویر لوگو</label>
                            <input type="file" class="form-control inputFile1" asp-for="Command.Icon" accept="image/*">
                            <span asp-validation-for="Command.Icon" class="error"></span>

                        </div>
                        <div class="col-md-8">
                            <div class="divPriw text-center">
                                <img id="preview1" src="~/Images/@Model.Command.IconString" alt="پیش‌ نمایش تصویر">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.Description" class="control-label">توضیحات</label>
                                <textarea type="text" class="form-control" asp-for="Command.Description"></textarea>
                                <span asp-validation-for="Command.Description" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" class="form-control" asp-for="Command.Id" value="@Model.Command.Id">
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <a asp-page="./Index" class="btn btn-danger btn-block btn-rounded waves-effect m-b-5">بازگشت</a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-block btn-rounded waves-effect m-b-5">ویرایش</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Css
{
    <link href="~/AdminTheme/assets/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminTheme/assets/FileUploader/FileUpload.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminTheme/assets/select2/select2.min.js" type="text/javascript"></script>
    <script src="~/AdminTheme/assets/FileUploader/FileUpload.js" type="text/javascript"></script>
    <script type="text/javascript">
         $(document).ready(function () {
            $('.persianDateInput').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
             $('#datatable').dataTable();
                   CKEDITOR.replace('Command_Description', {
            height: 500
        });
         });
        jQuery(".select2").select2({
            width: '100%'
        });
    </script>
}