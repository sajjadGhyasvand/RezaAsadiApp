@page
@model ServiceHost.Areas.Admin.Pages.General.GeneralSetting.EditModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "ویرایش";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ویرایش</h3>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-danger">@Model.Message</div>
            }
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.SiteTitle" class="control-label">عنوان سایت</label>
                                <input type="text" class="form-control" asp-for="Command.SiteTitle">
                                <span asp-validation-for="Command.SiteTitle" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.LanguageId" class="control-label">زبان</label>
                                <select class="form-control" asp-for="Command.LanguageId" asp-items="Model.ListLanguage">
                                    <option value="0">زبان را انتخاب کنید </option>
                                </select>
                                <span asp-validation-for="Command.LanguageId" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label asp-for="Command.MetaKeywords" class="control-label">کلمات کلیدی</label>
                                    <input type="text" class="form-control" asp-for="Command.MetaKeywords">
                                    <span asp-validation-for="Command.MetaKeywords" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label asp-for="Command.MetaDescription" class="control-label">توضیحات متا</label>
                                    <input type="text" class="form-control" asp-for="Command.MetaDescription">
                                    <span asp-validation-for="Command.MetaDescription" class="error"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.HostingSpace" class="control-label">دامنه</label>
                                <input type="text" class="form-control" asp-for="Command.HostingSpace" dir="ltr">
                                <span asp-validation-for="Command.HostingSpace" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label asp-for="Command.AdminEmail" class="control-label">ایمیل ادمین</label>
                                    <input type="email" class="form-control" asp-for="Command.AdminEmail" dir="ltr">
                                    <span asp-validation-for="Command.AdminEmail" class="error"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.MapLink" class="control-label">لینک نقشه</label>
                                <textarea type="text" class="form-control" asp-for="Command.MapLink" dir="ltr"></textarea>
                                <span asp-validation-for="Command.MapLink" class="error"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.GoogleLink" class="control-label">لینک گوگل</label>
                                <textarea type="text" class="form-control" asp-for="Command.MapLink" dir="ltr"></textarea>
                                <span asp-validation-for="Command.MapLink" class="error"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.BaladLink" class="control-label">لینک بلد</label>
                                <textarea type="text" class="form-control" asp-for="Command.MapLink" dir="ltr"></textarea>
                                <span asp-validation-for="Command.MapLink" class="error"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Command.WaysLink" class="control-label">لینک ویز</label>
                                <textarea type="text" class="form-control" asp-for="Command.MapLink" dir="ltr"></textarea>
                                <span asp-validation-for="Command.MapLink" class="error"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Command.PostalCode" class="control-label">کد پستی</label>
                                <textarea style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 304px;" class="form-control" placeholder="کد پستی را با # جدا کنید" asp-for="Command.PostalCode"></textarea>
                                <span asp-validation-for="Command.PostalCode" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Command.Address" class="control-label">آدرس</label>
                                <textarea style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 304px;" class="form-control" asp-for="Command.Address"></textarea>
                                <span asp-validation-for="Command.Address" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Command.PhoneNumbers" class="control-label">شماره تماس</label>
                                <textarea type="text" style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 304px;" class="form-control" placeholder="شماره تماس را با # جدا کنید" asp-for="Command.PhoneNumbers"></textarea>
                                <span asp-validation-for="Command.PostalCode" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.Command.Id" asp-for="Command.Id"/>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <a asp-page="./Index" class="btn btn-danger btn-block btn-rounded waves-effect m-b-5">بازگشت</a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-block btn-rounded waves-effect m-b-5">ویرایش</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Css
{
    <link href="~/AdminTheme/assets/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminTheme/assets/FileUploader/FileUpload.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminTheme/assets/select2/select2.min.js" type="text/javascript"></script>
    <script src="~/AdminTheme/assets/FileUploader/FileUpload.js" type="text/javascript"></script>
    <script type="text/javascript">
         $(document).ready(function () {
            $('.persianDateInput').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
             $('#datatable').dataTable();
                   CKEDITOR.replace('Command_Description', {
            height: 500
        });
          CKEDITOR.replace('Command_History', {
            height: 500
        });
         });
        jQuery(".select2").select2({
            width: '100%'
        });
    </script>
}