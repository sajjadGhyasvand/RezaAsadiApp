@page "/AccountRegister/Login"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization

@model ServiceHost.Areas.Identity.Pages.Account.LoginModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Login"];
}
<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

<!-- Start Page Title Area -->
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>Login</h2>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li>Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title Area -->
<!-- Start Login Area -->
<div class="login-section ptb-100">
    <div class="container">
        <div class="login-form">
            <div class="login-title">
                <h3>Welcome Back!</h3>
                <p>Please login to your account.</p>
            </div>

            <form class="form-horizontal m-t-20" method="post" asp-antiforgery="true">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <input asp-for="Input.Password" type="text" class="form-control" placeholder="Password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="send-btn">
                            <button type="submit" class="default-btn">
                                Login Now
                                <span></span>
                            </button>
                        </div>
                        <br>
                     
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}


